{% set bg_set = '' %}
{% if sources is not empty %}
  {% for source in sources %}
    {% set bg_set = bg_set ~ "#{ source.srcset } [#{ source.media }] | " %}
  {% endfor %}
{% endif %}
{% set bg_set = bg_set ~ src %}

{% set focal_point = focal_point|default([50, 50]) %}
<div
  class="Image Image--cover is-lazy u-posFit"
  data-bgset="{{ bg_set }}"
  data-sizes="auto"
  style="background-position: {{ focal_point[0] }}% {{ focal_point[1] }}%;"
  aria-label="{{ alt is defined ? alt : '' }}"
></div>
