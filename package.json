{
  "name": "factorial-patterns",
  "license": "MIT",
  "repository": "https://github.com/factorial-io/factorial-patterns",
  "devDependencies": {
    "gh-pages": "^1.1.0",
    "lerna": "^2.2.0",
    "npm-run-all": "^4.1.2",
    "stylelint": "^8.4.0",
    "stylelint-config-suitcss": "^12.0.0",
    "suitcss-preprocessor": "^4.0.0"
  },
  "scripts": {
    "build": "lerna bootstrap && yarn run build:css && lerna clean --yes && yarn run build:pattern-lab",
