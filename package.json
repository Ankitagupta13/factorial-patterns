    "factorial-utils-font": "^1.2.0",
    "factorial-utils-font-weight": "^0.3.0",
    "factorial-utils-margin": "^1.2.0",
    "factorial-utils-padding": "^1.2.0",
    "suitcss-components-test": "^1.0.0"
  }
}
